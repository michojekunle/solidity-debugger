{
  "name": "solidity-debugger",
  "displayName": "Solidity Debugger with Visualized State Changes",
  "description": "A VS Code extension for debugging Solidity smart contracts with visualized state changes",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "main": "./out/extension.js",
  "categories": [
    "Debuggers",
    "Visualization"
  ],
  "activationEvents": [
    "onLanguage:solidity",
    "onDebug"
  ],
  "contributes": {
    "commands": [
      {
        "command": "solidityDebugger.showStateVisualizer",
        "title": "Solidity Debugger: Show State Visualizer"
      },
      {
        "command": "solidityDebugger.showGasAnalyzer",
        "title": "Solidity Debugger: Show Gas Analyzer"
      },
      {
        "command": "solidityDebugger.analyzeContractState",
        "title": "Solidity Debugger: Analyze Contract State"
      },
      {
        "command": "solidityDebugger.analyzeGasUsage",
        "title": "Solidity Debugger: Analyze Gas Usage"
      },
      {
        "command": "solidityDebugger.stateVisualiser.nextStep",
        "title": "Solidity Debugger: Next Step"
      },
      {
        "command": "solidityDebugger.stateVisualiser.resetState",
        "title": "State Visualiser: Reset State"
      }
    ],
    "debuggers": [
      {
        "type": "solidityDebug",
        "label": "Solidity Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the Solidity file to debug"
              },
              "args": {
                "type": "array",
                "description": "Command line arguments passed to the program"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch"
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "solidityDebug",
            "request": "launch",
            "name": "Debug Solidity Contract",
            "program": "${file}",
            "stopOnEntry": true
          }
        ]
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == solidity",
          "command": "solidityDebugger.showStateVisualizer",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == solidity",
          "command": "solidityDebugger.showGasAnalyzer",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == solidity",
          "command": "solidityDebugger.analyzeContractState",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == solidity",
          "command": "solidityDebugger.analyzeGasUsage",
          "group": "navigation"
        }
      ],
      "webview/context": [
        {
          "command": "solidityDebugger.stateVisualiser.nextStep",
          "when": "webviewId == 'stateVisualizer'"
        },
        {
          "command": "solidityDebugger.stateVisualiser.resetState",
          "when": "webviewId == 'stateVisualizer'"
        }
      ]
    }
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run dev",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "ethers": "^5.7.0",
    "minimatch": "^5.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "solc": "^0.8.30",
    "web3": "^1.8.0",
    "vite": "7.2.0",
    "@vitejs/plugin-react": "5.1.0",
    "@eslint/js": "9.39.1",
    "globals": "16.5.0",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-refresh": "0.4.24",
    "typescript-eslint": "8.46.3",
    "vscode": "1.1.37",
    "@vscode/webview-ui-toolkit": "1.4.0",
    "vscode-webview": "1.0.1-beta.1",
    "assert": "2.1.0",
    "path": "0.12.7",
    "child_process": "1.0.2",
    "net": "1.0.2",
    "fs": "0.0.1-security",
    "next": "16.0.1",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.552.0",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "1.0.7",
    "vitest": "4.0.7"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.10.0",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "glob": "^8.0.3",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.3.1",
    "typescript": "^5.7.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "tailwindcss": "^4.1.9",
    "postcss": "8.5.6"
  }
}
